#post_content
  %h1= @post.title
  %p= @post.content

  #comments
    %h2
      = @post.comments.count
      Comments
    = render @post.comments

    %h3 Reply to thread
    = render "comments/form"

  %br/
  %hr/
  %br/


  = link_to 'Back', :back, class: "button"
  = link_to "Edit", edit_post_path(@post), class: "button"
  = link_to "Delete", post_path(@post), method: :delete, data: { confirm: "We're going to miss you, but if your not happy here then get the hell out"}, class: "button"
