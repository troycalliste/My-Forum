.comment.clearfix
  .content
    %p.comment_content= comment.comment
    %p.comment_author= comment.user.email if comment.user
  .buttons
    = link_to "Edit", edit_post_comment_path(comment.post, comment)
    = link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you like super positively sure you want to delete this brilliant diction?"}
